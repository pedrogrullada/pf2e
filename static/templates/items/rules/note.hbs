<div class="form-group">
    <label class="short">{{localize "PF2E.RuleEditor.Note.Title"}}</label>
    <div class="form-fields">
        <input type="text" name="system.rules.{{index}}.title" value="{{rule.title}}" />
        <label>
            {{localize "PF2E.RuleEditor.Note.Hidden"}}
            <input type="checkbox" class="hidden-value" {{checked (or (eq rule.visibility "owner") (eq rule.visibility "gm"))}}>
        </label>
    </div>
</div>

<div class="form-group">
    <label class="short" for="{{rootId}}-selector">{{localize "PF2E.RuleEditor.General.Selector"}}</label>
    <div class="form-fields">
        <tagify-tags class="pf2e-tagify selector-list" id="{{rootId}}-selector" name="system.rules.{{index}}.selector"
                     value="{{json rule.selector}}"></tagify-tags>
    </div>
</div>

<div class="form-group stacked">
    <label for="{{rootId}}-text">{{localize "PF2E.RuleEditor.Note.Text"}}</label>
    <div class="form-fields">
        <code-mirror name="system.rules.{{index}}.text" id="{{rootId}}-text" language="html">{{rule.text}}</code-mirror>
    </div>
</div>

<div class="form-group">
    <label class="short">{{localize "PF2E.RuleEditor.Note.Outcome"}}</label>
    <tagify-tags class="pf2e-tagify outcomes" name="system.rules.{{index}}.outcome" value="{{json rule.outcome}}" />
</div>

<div class="form-group">
    <label class="short">{{localize "PF2E.RuleEditor.General.Predicate"}}</label>
    <input type="text" name="system.rules.{{index}}.predicate" value="{{json rule.predicate}}" />
</div>
