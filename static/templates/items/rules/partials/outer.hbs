<section class="rule-form" data-key="{{rule.key}}" data-idx="{{index}}">
    <header class="rule-element-header">
        <i class="fa-solid fa-bars drag-handle"></i>
        <h3{{#if (not recognized)}} class="unrecognized"{{/if}}>{{label}}</h3>
        <label class="priority" data-tooltip aria-label="{{localize "PF2E.RuleEditor.General.PriorityHint"}}">
            <i class="fa-solid fa-fw fa-list-ol" inert></i>
            <input type="number" value="{{rule.priority}}" {{#unless rule.priority includeZero=true}}placeholder="{{object.priority}}"{{/unless}}/>
        </label>
        <div class="item-controls">
            <a role="button" class="icon fa-solid fa-fw fa-edit" data-action="edit-rule-element"
               data-rule-index="{{index}}" data-tooltip aria-label="{{localize "PF2E.Item.Rules.Edit"}}"></a>
            <a role="button" class="icon fa-solid fa-fw fa-trash" data-action="remove-rule-element"
               data-rule-index="{{index}}" data-tooltip aria-label="{{localize "PF2E.Item.Rules.Remove"}}"></a>
        </div>
    </header>
    <div class="container{{#if autogenerate}} autogenerated flexcol{{/if}}">
        {{{template}}}
    </div>

    {{#if validationFailures}}
        <div class="validation-failures">
            <ul>
                {{#each validationFailures as |message|}}
                    <li><span>{{message}}</span></li>
                {{/each}}
            </ul>
        </div>
    {{/if}}
</section>
